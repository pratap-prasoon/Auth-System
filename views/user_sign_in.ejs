<!-- Sign in page -->

<center>
    <div class="whole-part">
        <div class="heading">
        <h1>
          Nodejs Authentication
        </h1>
         <h2 >Sign In</h2>
        </div>
        <div style="margin-top: 30px;" class="sign-in-form-container">
            <form action="/users/create-session" method="POST" class="sign-in-form">
                <div class="input-container">
                <input type="email" name="email" placeholder="Email"  required class="input-color">
                </div>
                <div class="input-container">
                <input type="password" name="password" placeholder="Password"  required class="input-color">
                </div>
                
                <div class="forgot-password-div">
                  <a href="">
                      Forgot password?
                  </a>
                </div>
                <div class="input-container">
                    
                <input type="submit" value="Sign In" class="sign-in-button">
                   
            </div>
            
            <div class="sign-in-with-google">
              <a href="auth/google">
                Sign in with Google+
              </a>
            </div>
            
              <div class="dont-have-an-account">
                Don't have an account?
                <a href="/users/sign-up"> Sign up</a>
              </div>  
              
            </form>
        </div>
    
    
    
</div>
</center>